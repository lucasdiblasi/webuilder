{
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true, // disable this on production
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@assets/*": [
        "dist/assets/*"
      ],
      "@src/*": [
        "src/pages_src/*"
      ],
      "@tests/*": [
        "src/test/*"
      ]
    }
  }
}